<div class="bg-primary m-1 p-1 text-white text-center"><h4>Discounts</h4></div>

<div id="toast" class="toast" style="position: absolute; top: 0; right: 0;">
    <div class="toast-header">
        <strong class="mr-auto" id="product">Product Name: </strong>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="toast-body">            
        Discount Code: <strong id="code"></strong>
    </div>
</div>

<table class="table table-hover table-striped table-bordered">
    <thead>
        <tr>
            @* <th scope="col">Product ID</th> *@
            <th scope="col">Discount Name</th>
            <th scope="col">Description</th>
            <th scope="col">Expiration Date</th>
            <th scope="col">Discount Link</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Discount d in Model)
    {
        <tr>
        <td>@d.Title</td>
        <td>@d.Description</td>
        <td>@d.EndTime.ToString("MM/dd/yyyy")</td>
        <td><a href="#" class="code" data-code="@d.Code" data-product="@d.Title"><i class="far fa-hand-point-right"></i>
                Discount Code
        </a></td>
        </tr>
    }   
    </tbody>
</table>

